# Environment Configuration Template
# Copy this file to .env and update with your production values
# DO NOT commit .env files to version control

# =============================================================================
# ENVIRONMENT
# =============================================================================
# Options: development, production, testing
ENVIRONMENT=production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:secure_password@postgres:5432/lightspun_db

# Database connection pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=false

# =============================================================================
# SERVER CONFIGURATION  
# =============================================================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_WORKERS=4

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE_ENABLED=true
LOG_FILE_PATH=/var/log/app/app.log
LOG_FILE_MAX_BYTES=52428800
LOG_FILE_BACKUP_COUNT=10
LOG_CONSOLE_ENABLED=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate a secure secret key for production
# You can use: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-this-in-production

# JWT settings
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15

# CORS settings - comma-separated list
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOW_CREDENTIALS=false
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE
CORS_ALLOW_HEADERS=Content-Type,Authorization

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_TITLE=US States and Addresses API
API_DESCRIPTION=FastAPI backend for US states, municipalities, and addresses
API_VERSION=1.0.0

# Set to null/empty to disable in production for security
API_DOCS_URL=
API_REDOC_URL=  
API_OPENAPI_URL=

# =============================================================================
# ADDITIONAL PRODUCTION SETTINGS
# =============================================================================
# Add any additional environment-specific settings here